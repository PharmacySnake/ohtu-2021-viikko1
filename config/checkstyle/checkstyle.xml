<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<module name="Checker">
    
    
    <module name="TreeWalker">
        <module name="LeftCurly"/>
        <module name="NestedIfDepth"/>
        <module name="NestedForDepth">
            <property name="max" value="0"/>
        </module>
        <module name="MethodLength">
            <property name="max" value="15"/>
        </module>
        <module name="CyclomaticComplexity">
            <property name="max" value="3"/>
        </module>
    </module>
    
</module>

<!--metodin pituus max 15 riviä (tree walker sisälle)
ei yli yhtä sisäkkäistä if-komentoa
ei sisäkkäisiä for-komentoja
koodi on oikein sisennetty
lohkon avaava aaltosulku on aina rivin lopussa
syklomaattinen koodikompleksisuus korkeintaan 3-->